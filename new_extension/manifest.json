{
  "manifest_version": 2,

  "name": "Audio News Submit",
  "description": "This extension allows a user to upload an audio news reading.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "mic.png",
    "default_popup": "upload.html",
	"default_title": "Submit some files!"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}